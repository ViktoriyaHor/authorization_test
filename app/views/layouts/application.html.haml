!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title AuthorizationTest
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.container-fluid.navbar.navbar-expand-lg.sticky-top.bg-light.navbar-light
      .w-75.mx-auto.text-center
        %button.navbar-toggler{:class => "mx-auto", :data => {:target => "#navbarSupportedContent", :toggle => "collapse"}, :type => "button", :aria => {:controls => "navbarSupportedContent", :expanded => "false", :label => "Toggle navigation"}}
          %span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarSupportedContent
          %ul.navbar-nav.mr-auto
            - if current_user
              %li.nav-item
                = link_to "Log out", logout_path, method: :delete, class: "nav-link"
            - else
              %li.nav-item{:class => current_class?('/signup')}
                = link_to 'Sign Up', signup_path, class: "nav-link"
              %li.nav-item{:class => current_class?('/login')}
                = link_to 'Log In', login_path, class: "nav-link"

    = render "layouts/errors"
    = render "users/errors"

    = yield
    = debug(params) if Rails.env.development?
